<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet"  href="/css/searchresults.css">
    <link href="https://fonts.googleapis.com/css?family=Gotu&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans|Quicksand:500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous"> -->
  </head>
  <title>Search</title>
  <body>
   <div class="topnav">
     <div class="row">
       <div class="col-lg-4">
        <span class="logo"><a href="/profile">üí¨ Blogify</a></span>
       </div>
       <div class="col-lg-3 search">
        <form method="GET" action="/search">
          <input type="text"  class="form-control" placeholder="Search something...üîç" name="query" required autocomplete="off">
        </form>
    
       </div>
       <div class="col-lg-1">
       
      </div>
       <div class="col-lg-1">
        <a href="/requests">Received Request‚úî</a>
       </div>
       <div class="col-lg-1">
        <a href="/sentrequests">Sent Request‚úî</a>
       </div>
       <div class="col-lg-1">
       <a href="/manage">Manage Account</a>
      </div>
      <div class="col-lg-1">
        <a href="/logout"><%= loggedUser %><br>üì≤</a>
      </div>
   
     </div>
    </div>
    <br>
    <br>
    <% if(results.length===0) { %>
      <img src="https://cdn.dribbble.com/users/283708/screenshots/7084440/media/6cd8b29540bcfb6a7693c27f58db7b56.png" alt="" class="nothing">
    <% } %>
    <div class="container">
      <% if(results.length!=0) { %>
       <h1 class="display-4">Results (<%= results.length %>) ‚úî</h1>
       <br>
      <% } %>
        <% for(var i=0;i!=results.length;i++) { %>
            <% var rec_req=results[i].rec_req,alreadySent=false,following=false %>
            <% for(var j=0;j!=results[i].followers.length;j++) { %>
               <% if(results[i]["followers"][j]===loggedUser){ %>
                <%    following=true;break; %>
            <%    } %>
            <% } %> 
            <% for(var j=0;j!=results[i].rec_req.length;j++) { %>
                <% if(results[i]["rec_req"][j]===loggedUser){ %>
                 <%    alreadySent=true;break; %>
             <% } %>
             <% } %> 
            
            <div class="row ress">
                <div class="col-lg-1 left">

                </div>
                <div class="col-lg-4 aac">
                    <img src="<%= results[i].profileimg %>" alt="">
                </div>
                <div class="col-lg-7 forb aac">  
                   <div class="row">
                     <div class="col-12 name">
                      <h1 class="display-4">üí¨<%=results[i].name%> (@<%= results[i].username %>)</h1>
                     </div>
                     <div class="col-12 line">

                     </div>
                     <div class="col-lg-6 followers">
                      <h1 class="display-4">‚úîFollowers: <%=results[i].followers.length%> </h1>
                     </div>
                     <div class="col-lg-6 following">
                      <h1 class="display-4">‚úîFollowing: <%=results[i].following.length%> </h1>
                    </div>
                    <div class="col-12 line1 aac">
                    
                    </div>
                    <div class="col-12 option aac">
                      <% if(alreadySent===true) { %>
                        <a href="/cancel/<%= results[i].username %>"> <button class="btn btn-info">Cancel Request‚ùå</button></a>
                        <% } %>
                        <% if(following===true) { %>
                          <a href="/unfollow/<%= results[i].username %>" > <button class="btn btn-info">Unfollow‚ùå</button></a>
                          <% } %>
                          <% if(alreadySent===false && following===false) { %>
                            <a href="/send/<%= results[i].username %> " > <button class="btn btn-primary">Send Request‚úî</button></a>
                            <% } %>
                    </div>
                   </div>
                   
                </div>
                <div class="col-12 space">

                </div>
            </div>


        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>